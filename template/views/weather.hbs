<!DOCTYPE html>
<html lang="en">

    <head>
        {{>headerlink}}
    </head>

    <body>

        <!-- navbar  -->
        {{>navbar}}

        <!-- main header  -->
        <section class="container pb-5">
            <div class="row">
                <div class="col-md-12 col-12">
                    <div class="main_content">
                        <form class="temp_form">
                            <input type="text" id="cityName"
                                placeholder="Enter Your City"
                                autocomplete="off">
                            <input type="submit" value="search" id="submitBtn">
                        </form>
                    </div>
                    <div class="temp_information">
                        <div class="top_layer">
                            <p id="day">Tuesday</p>
                            <p id="today_data">13 OCT</p>
                        </div>
                        <div class="main_layer">
                            <p id="city_name">Get Output Here</p>
                            <div class="midlle_layer data_hide">
                                <p id="temp"><span id="temp_real_val"> 0 </span><sup> o</sup>C</p>
                                <p id="temp_staus"><i class="fa fa-cloud"></i></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        {{!-- footer --}}
        {{>footer}}
    </body>
    <script src="/js/main.js"></script>
</html>